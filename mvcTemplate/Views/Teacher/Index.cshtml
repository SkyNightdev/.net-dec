<h1>Liste des étudiants</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.Lastname</td>
                <td>@teacher.Firstname</td>
                <td>@teacher.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-primary">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-success">Ajouter un enseignant</a>
