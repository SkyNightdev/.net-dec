@model mvcTemplate.Data.Event


@{
    ViewData["Title"] = "Détails de l'événement";
}

<h1>Détails de l'événement</h1>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Date de l'événement
        </dt>
        <dd class="col-sm-10">
            @Model.EventDate.ToString("f")
        </dd>
        <dt class="col-sm-2">
            Nombre maximum de participants
        </dt>
        <dd class="col-sm-10">
            @Model.MaxParticipants
        </dd>
        <dt class="col-sm-2">
            Lieu
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Modifier</a>
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
</div>
