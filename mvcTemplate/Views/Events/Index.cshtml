@model IEnumerable<mvcTemplate.Models.Event>

<h2>Liste des événements</h2>

<p>
    <a asp-action="Add" class="btn btn-primary">Créer un nouvel événement</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Description</th>
            <th>Date</th>
            <th>Participants max</th>
            <th>Lieu</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventModel in Model)
        {
            <tr>
                <td>@eventModel.Title</td>
                <td>@eventModel.Description</td>
                <td>@eventModel.EventDate.ToShortDateString()</td>
                <td>@eventModel.MaxParticipants</td>
                <td>@eventModel.Location</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@eventModel.Id" class="btn btn-warning">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@eventModel.Id" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
