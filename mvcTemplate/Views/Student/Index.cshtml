@model List<mvcTemplate.Models.Student>

<h1>Liste des étudiants</h1>

<table class="table">
    <thead>
        <tr>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Âge</th>
            <th>Spécialisation</th>
            <th>GPA</th>
            <th>Enseignant</th> <!-- Nouvelle colonne pour afficher l'enseignant -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Firstname</td>
                <td>@student.Lastname</td>
                <td>@student.Age</td>
                <td>@student.Major</td>
                <td>@student.GPA</td>
                <td>
                    @(ViewBag.Teachers.ContainsKey(student.TeacherId) 
                        ? ViewBag.Teachers[student.TeacherId] 
                        : "Non assigné")
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-warning">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-primary">Ajouter un étudiant</a>
